<script>
$(function() {
    var $cms = $('.comment-cnt');
    for(var i=0; i<$cms.length; i++) {
        var $cm = $($cms[i]);
        $.getJSON("http://api.duoshuo.com/threads/counts.jsonp?callback=?&short_name=hayespan&threads="+$cm.attr("key"), function(data) {
            $cm.html(data["response"][$cm.attr("key")]["comments"]);
        })
    }
});
</script>
